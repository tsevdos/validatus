{
  "name": "validatus",
  "version": "0.0.1",
  "description": "An easy to use, declarative, light-weight form validation library with zero dependencies",
  "main": "dist/validatus.js",
  "homepage": "https://github.com/tsevdos/validatus",
  "scripts": {
    "start": "webpack-dev-server --config webpack.dev.js --mode development --hot --inline --port 3000",
    "format": "prettier --write src/**/*.js examples/**/*.js",
    "lint": "npm run format && eslint src/**/*.js examples/**/*.js",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "test:coverage": "jest --coverage",
    "build": "webpack --mode production --config ./webpack.prod.js",
    "stats": "webpack --json > stats.json"
  },
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "keywords": [
    "validator",
    "validation",
    "validate",
    "field-validation",
    "form",
    "forms",
    "input",
    "strings",
    "functional programming",
    "fp"
  ],
  "author": "John Tsevdos <tsevdosjohn@gmail.com> (http://tsevdos.me)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tsevdos/validatus/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tsevdos/validatus"
  },
  "devDependencies": {
    "@babel/core": "7.4.4",
    "@babel/plugin-proposal-object-rest-spread": "7.4.4",
    "@babel/preset-env": "7.4.4",
    "babel-eslint": "10.0.1",
    "babel-loader": "8.0.6",
    "eslint": "5.16.0",
    "html-webpack-plugin": "3.2.0",
    "jest": "24.8.0",
    "prettier": "1.17.1",
    "webpack": "4.31.0",
    "webpack-cli": "3.3.2",
    "webpack-dev-server": "3.4.1",
    "webpack-merge": "4.2.1"
  },
  "targets": {
    "node": ">=4"
  }
}
